#include <iostream>
#include <string>
using namespace std;

int main() {
    cout << "Enter a three-digit integer: ";
    string integer = "0";
    cin >> integer;
    if (integer[0] == integer[2]){
        cout << integer << " is a palindrome" << endl;
    }
    else{
        cout << integer << " is not a palindrome" << endl;
    }
    return 0;
}
